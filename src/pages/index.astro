---
import Base from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import PricingTable from "../components/PricingTable.astro";
import Process from "../components/Process.astro";
import Contact from "../components/Contact.astro";
import FAQ from "../components/FAQ.astro";
import { FEATURES } from "../../swiftsite.config";
---
<Base>
  <Header />

  <main>
    <Hero />

    {FEATURES.pricing && <PricingTable />}

    <Process />

    {FEATURES.contact && <Contact />}

    {FEATURES.faq && <div class="narrow"><FAQ /></div>}
  </main>

  <Footer />
</Base>

<style>
/* helper to make FAQ match the same max width */
.narrow{max-width:1120px;margin:0 auto;padding:0 18px}
</style>

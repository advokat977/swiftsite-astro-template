---
import Base from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Pricing from "../components/Pricing.astro";
import Contact from "../components/Contact.astro";
import CalendarBlock from "../components/CalendarBlock.astro";
import ZoomBlock from "../components/ZoomBlock.astro";
import { FEATURES } from "../../swiftsite.config";
---
<Base>
  <Header />

  <main class="container">
    {FEATURES.hero && <Hero />}
    <hr class="sep" />
    {FEATURES.pricing && <Pricing />}
    {FEATURES.calendar && <div style="margin-top:18px"><CalendarBlock /></div>}
    {FEATURES.zoom && <div style="margin-top:18px"><ZoomBlock /></div>}
    {FEATURES.contact && <div style="margin-top:18px"><Contact /></div>}
  </main>

  <Footer />

  <style>
    .sep{border:0;border-top:1px solid var(--border);margin:22px 0}
  </style>
</Base>

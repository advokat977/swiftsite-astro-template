---
import { PACKAGES } from "../../swiftsite.config";
---
<section class="section">
  <div class="container">
    <h2>Packages</h2>
    <p class="lede">Pick what you need. Upgrade anytime.</p>
    <div class="grid cards">
      {PACKAGES.map(p => (
        <article class="card">
          <h3>{p.name}</h3>
          <div class="price">{p.price}</div>
          <p class="muted">{p.desc}</p>
          <ul class="feat">
            {p.features.map(f => <li>{f}</li>)}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
.cards .card{min-height:260px}
.price{font-weight:700;color:var(--accent);margin:6px 0 10px}
.feat{margin:8px 0 0 0;padding-left:18px}
.feat li{margin:4px 0}
</style>

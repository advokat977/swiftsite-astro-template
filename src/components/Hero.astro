---
import { SITE, LINKS, FEATURES, ASSETS } from "../../swiftsite.config";
---
<section class="hero">
  <div class="container inner">
    <img class="hero-logo" src={ASSETS.logoLight} alt="SwiftSite logo" width="220" height="48" />
    <h1 class="sr-only">{SITE.title}</h1>
    <p class="lede">{SITE.tagline}</p>
    <div class="actions">
      {FEATURES.contact && <a class="btn primary" href="#contact">Get in touch</a>}
      {FEATURES.calendar && <a class="btn ghost" href={LINKS.calendar}>Book a call</a>}
      {FEATURES.zoom && <a class="btn ghost" href={LINKS.zoom}>Join Zoom</a>}
    </div>
  </div>
</section>

<style>
.hero{
  min-height:60vh;display:flex;align-items:center;
  background:linear-gradient(180deg,#fff 0%,#f6f7fb 100%);
  text-align:center
}
.inner{max-width:720px}
.hero-logo{margin:0 auto 16px auto;display:block;filter:none}
.sr-only{position:absolute;left:-9999px}
.actions{display:flex;gap:14px;justify-content:center;flex-wrap:wrap;margin-top:18px}
</style>

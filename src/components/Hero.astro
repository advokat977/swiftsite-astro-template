---
import { SITE, LINKS, FEATURES } from "../../swiftsite.config";
---
<section class="hero">
  <div class="bg">
    <!-- super-subtilna mre≈æa -->
    <svg viewBox="0 0 100 100" aria-hidden="true" class="grid">
      <defs>
        <pattern id="p" width="8" height="8" patternUnits="userSpaceOnUse">
          <path d="M 8 0 L 0 0 0 8" fill="none" stroke="currentColor" stroke-opacity=".035" stroke-width=".5"/>
        </pattern>
      </defs>
      <rect width="100" height="100" fill="url(#p)"/>
    </svg>
    <!-- mehki akcent, ni≈æi i ≈°iri -->
    <div class="glow"></div>
  </div>

  <div class="container wrap">
    <!-- Lijevo: te≈æi, fokusiran copy -->
    <div class="left">
      <h1>Profesionalan sajt za 24h</h1>
      <p class="lede">
        Landing + mail, kalendar ili Zoom. Brzo, ƒçisto, bez glavobolje.
      </p>

      <div class="cta">
        {FEATURES.contact && <a class="btn primary" href="#contact">Get in touch</a>}
        <a class="btn ghost" href="/thanks" aria-label="See an example">See example</a>
      </div>

      <ul class="badges" role="list">
        <li>‚ö° 100/100 performance</li>
        <li>üõ°Ô∏è Cloudflare hosting</li>
        <li>üîß Zero maintenance</li>
      </ul>
    </div>

    <!-- Desno: kompaktniji, kontrastniji mockup -->
    <div class="right">
      <figure class="mock" aria-label="Website preview">
        <div class="chrome">
          <span class="dot r"></span><span class="dot y"></span><span class="dot g"></span>
          <div class="addr">swiftsite.pages.dev</div>
        </div>
        <div class="hero-block">
          <div class="ttl"></div>
          <div class="sub"></div>
          <div class="btns">
            <div class="btn ph"></div>
            <div class="btn ph ghost"></div>
          </div>
        </div>
        <div class="cards">
          <div class="card"></div><div class="card"></div><div class="card"></div>
        </div>
      </figure>
      <figcaption class="caption">Astro + Cloudflare Pages template</figcaption>
    </div>
  </div>
</section>

<style>
.hero{position:relative;overflow:hidden}
.bg{position:absolute;inset:0}
.grid{width:100%;height:100%;color:#0a0a0a}
:root[data-theme="dark"] .grid{color:#ffffff}
.glow{
  position:absolute;left:-15%;right:-15%;bottom:-10%;
  height:38%;
  background:radial-gradient(60% 80% at 50% 0%,
    color-mix(in oklab, var(--accent) 24%, transparent) 0%,
    transparent 70%);
  filter:blur(46px);opacity:.45;pointer-events:none;
}

/* Layout */
.wrap{
  display:grid;grid-template-columns:1.05fr .95fr;gap:36px;align-items:center;
  min-height:64vh;padding:48px 0 18px;
}
@media (max-width: 980px){
  .wrap{grid-template-columns:1fr;gap:22px;min-height:auto;padding:26px 0 10px}
}

/* Copy */
.left h1{font-size:clamp(36px,5.8vw,56px);line-height:1.06;margin:0 0 8px}
.left .lede{font-size:clamp(18px,2.3vw,22px);color:var(--muted);margin:0 0 18px}
.cta{display:flex;gap:12px;flex-wrap:wrap;margin:8px 0 6px}
.badges{display:flex;gap:10px;flex-wrap:wrap;margin:14px 0 0;padding:0;list-style:none}
.badges li{
  font-size:13px;color:var(--ink);background:var(--panel);
  border:1px solid var(--border);border-radius:999px;padding:7px 10px
}

/* Mockup */
.right{display:flex;flex-direction:column;align-items:center}
.mock{
  width:min(520px,100%);border:1px solid var(--border);border-radius:14px;
  background:#fff;box-shadow:0 18px 40px rgba(16,24,40,.12);overflow:hidden
}
:root[data-theme="dark"] .mock{
  background:#0f1521;box-shadow:0 18px 40px rgba(0,0,0,.35)
}
.chrome{
  display:flex;align-items:center;gap:6px;border-bottom:1px solid var(--border);
  padding:10px 12px;background:linear-gradient(180deg,#fafbff,#f1f4f8)
}
:root[data-theme="dark"] .chrome{background:linear-gradient(180deg,#101726,#0d1420)}
.dot{width:8px;height:8px;border-radius:50%;display:inline-block;opacity:.9}
.r{background:#ef6b6b}.y{background:#f5c351}.g{background:#63ca7b}
.addr{margin-left:auto;font-size:12px;color:var(--muted);background:var(--bg);
  border:1px solid var(--border);padding:6px 10px;border-radius:10px}
.hero-block{padding:22px 20px 12px}
.ttl{width:66%;height:24px;border-radius:8px;background:color-mix(in oklab, var(--ink) 14%, transparent)}
.sub{margin-top:10px;width:52%;height:12px;border-radius:8px;background:color-mix(in oklab, var(--ink) 10%, transparent)}
.btns{display:flex;gap:10px;margin-top:16px}
.btn.ph{width:120px;height:36px;border-radius:10px;background:var(--accent)}
.btn.ph.ghost{background:transparent;border:1px solid var(--border)}
.cards{display:grid;grid-template-columns:repeat(3,1fr);gap:12px;padding:16px 16px 22px}
.card{height:90px;border-radius:12px;border:1px solid var(--border);background:var(--panel)}
.caption{margin-top:8px;font-size:12px;color:var(--muted);text-align:center}
</style>

---
import { SITE, LINKS, FEATURES } from "../../swiftsite.config";
---
<section class="hero">
  <div class="container inner">
    <h1>{SITE.title}</h1>
    <p class="lede">{SITE.tagline}</p>
    <div class="actions">
      {FEATURES.contact && <a class="btn primary" href="#contact">Get in touch</a>}
      {FEATURES.calendar && <a class="btn ghost" href={LINKS.calendar}>Book a call</a>}
      {FEATURES.zoom && <a class="btn ghost" href={LINKS.zoom}>Join Zoom</a>}
    </div>
  </div>
</section>

<style>
.hero{
  min-height:60vh;display:flex;align-items:center;
  background:linear-gradient(180deg,#fff 0%,#f6f7fb 100%);
}
.inner{text-align:center;max-width:780px}
h1{font-size:clamp(40px,6vw,60px);margin-bottom:8px}
.lede{font-size:clamp(18px,2.2vw,22px);color:var(--muted);margin-bottom:22px}
.actions{display:flex;gap:14px;justify-content:center;flex-wrap:wrap}
</style>

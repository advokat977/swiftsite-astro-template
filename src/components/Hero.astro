---
import { FEATURES } from "../../swiftsite.config";

/** Ako ≈æeli≈° bez ikona, stavi na false */
const SHOW_ICONS = true;
---
<section class="hero">
  <div class="container wrap">
    <!-- Lijevo: copy -->
    <div class="left">
      <h1>Launch your site in <span class="nowrap">72h</span> ‚Äî effortlessly</h1>
      <p class="lede">
        Landing + <strong>mail</strong>, <strong>calendar</strong> or <strong>Zoom</strong>. Fast, clean, zero headache.
      </p>

      <div class="cta">
        {FEATURES.contact && <a class="btn primary" href="#contact">Get in touch</a>}
        <a class="link" href="/thanks" aria-label="See example">See example ‚Üí</a>
      </div>

      <div class="testimonial">
        <div class="stars" aria-hidden="true">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</div>
        <p>
          ‚ÄúOnline the same day. Fast & spotless.‚Äù
          <span class="who">‚Äî A. Jovanoviƒá, Small Biz</span>
        </p>
      </div>

      <ul class="benefits" role="list">
        <li>‚ö° Lighthouse 100/100</li>
        <li>üõ°Ô∏è Cloudflare hosting</li>
        <li>üîß Zero maintenance</li>
      </ul>
    </div>

    <!-- Desno: velike ikone (boje po znaƒçenju) -->
    {SHOW_ICONS && (
      <div class="right">
        <div class="icons">
          <div class="icon mail"    title="Email"    aria-hidden="true">
            <svg viewBox="0 0 24 24"><path d="M3 6h18v12H3z" fill="none" stroke="currentColor" stroke-width="2"/><path d="M3 7l9 7 9-7" fill="none" stroke="currentColor" stroke-width="2"/></svg>
          </div>
          <div class="icon calendar" title="Calendar" aria-hidden="true">
            <svg viewBox="0 0 24 24"><rect x="3" y="5" width="18" height="16" rx="2" fill="none" stroke="currentColor" stroke-width="2"/><path d="M3 9h18M8 3v4M16 3v4" fill="none" stroke="currentColor" stroke-width="2"/></svg>
          </div>
          <div class="icon video"   title="Video"    aria-hidden="true">
            <svg viewBox="0 0 24 24"><rect x="3" y="7" width="14" height="10" rx="2" fill="none" stroke="currentColor" stroke-width="2"/><path d="M17 9l4-2v10l-4-2z" fill="none" stroke="currentColor" stroke-width="2"/></svg>
          </div>
          <div class="icon files"   title="Files"    aria-hidden="true">
            <svg viewBox="0 0 24 24"><path d="M14 3H6a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z" fill="none" stroke="currentColor" stroke-width="2"/><path d="M14 3v6h6" fill="none" stroke="currentColor" stroke-width="2"/></svg>
          </div>
        </div>
      </div>
    )}
  </div>
</section>

<style>
.hero{position:relative;overflow:hidden}

/* Layout */
.wrap{
  display:grid;grid-template-columns:1.05fr .95fr;gap:38px;align-items:center;
  min-height:58vh;padding:56px 0 10px;
}
@media (max-width: 980px){
  .wrap{grid-template-columns:1fr;gap:28px;min-height:auto;padding:28px 0 8px}
}

/* Copy */
.left h1{font-size:clamp(38px,5.8vw,64px);line-height:1.05;margin:0 0 12px}
.nowrap{white-space:nowrap}
.left .lede{font-size:clamp(18px,2.2vw,22px);color:var(--muted);margin:0 0 18px}
.cta{display:flex;gap:14px;align-items:center;flex-wrap:wrap;margin:8px 0 10px}
.link{font-weight:600;color:var(--ink)} .link:hover{text-decoration:underline}

.testimonial{
  display:flex;gap:10px;align-items:flex-start;margin-top:12px;
  background:var(--panel);border:1px solid var(--border);border-radius:14px;padding:10px 12px;max-width:560px
}
.stars{letter-spacing:2px;color:#f5b301;font-size:14px;margin-top:2px}
.testimonial p{margin:0;font-size:14px;color:var(--ink)}
.who{color:var(--muted)}

.benefits{display:flex;gap:10px;flex-wrap:wrap;margin:14px 0 0;padding:0;list-style:none}
.benefits li{
  font-size:13px;color:var(--ink);background:var(--panel);
  border:1px solid var(--border);border-radius:999px;padding:7px 10px
}

/* Ikone ‚Äì velike, obojene */
.right{display:flex;justify-content:center}
.icons{
  display:grid;grid-template-columns:repeat(2,minmax(120px,1fr));gap:18px;
  justify-items:center;
}
.icon{
  width:96px;height:96px;border-radius:18px;
  display:grid;place-items:center;
  color:white; /* boju ikone postavljamo na white, a kartica nosi brand boju */
  box-shadow:0 18px 36px rgba(16,24,40,.16), inset 0 0 0 1px rgba(255,255,255,.25);
}
.icon svg{width:44px;height:44px;stroke:#fff}

.mail{background:#0ea5e9;}     /* sky */
.calendar{background:#22c55e;} /* green */
.video{background:#a855f7;}    /* purple */
.files{background:#f59e0b;}    /* amber */

:root[data-theme="dark"] .icon{
  box-shadow:0 18px 36px rgba(0,0,0,.45), inset 0 0 0 1px rgba(255,255,255,.18);
}
</style>

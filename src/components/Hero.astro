---
import { SITE, LINKS, FEATURES } from "../../swiftsite.config";
---
<section class="hero">
  <div class="bg">
    <!-- super-subtilna mre≈æa -->
    <svg viewBox="0 0 100 100" aria-hidden="true" class="grid">
      <defs>
        <pattern id="p" width="8" height="8" patternUnits="userSpaceOnUse">
          <path d="M 8 0 L 0 0 0 8" fill="none" stroke="currentColor" stroke-opacity=".03" stroke-width=".5"/>
        </pattern>
      </defs>
      <rect width="100" height="100" fill="url(#p)"/>
    </svg>
    <!-- mehki akcent ispod sadr≈æaja -->
    <div class="glow"></div>
  </div>

  <div class="container wrap">
    <!-- Lijeva kolona: poruka + akcija -->
    <div class="left">
      <h1>Launch your site in 24h ‚Äî effortlessly</h1>
      <p class="lede">
        Landing + <strong>mail</strong>, <strong>calendar</strong> ili <strong>Zoom</strong>. Brzo, ƒçisto, bez glavobolje.
      </p>

      <div class="cta">
        {FEATURES.contact && <a class="btn primary" href="#contact">Get in touch</a>}
        <a class="link" href="/thanks" aria-label="See example">See example ‚Üí</a>
      </div>

      <!-- dru≈°tveni dokaz -->
      <div class="testimonial">
        <div class="stars" aria-hidden="true">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</div>
        <p>
          ‚ÄúOnline isti dan, bez komplikacija. Brzina + ƒçistoƒáa.‚Äù
          <span class="who">‚Äî A. Jovanoviƒá, Small Biz</span>
        </p>
      </div>

      <!-- mini benefiti -->
      <ul class="benefits" role="list">
        <li>‚ö° Lighthouse 100/100</li>
        <li>üõ°Ô∏è Cloudflare hosting</li>
        <li>üîß Zero maintenance</li>
      </ul>
    </div>

    <!-- Desna kolona: kompaktniji mockup -->
    <div class="right">
      <figure class="mock" aria-label="Website preview">
        <div class="chrome">
          <span class="dot r"></span><span class="dot y"></span><span class="dot g"></span>
          <div class="addr">swiftsite.pages.dev</div>
        </div>
        <div class="hero-block">
          <div class="ttl"></div>
          <div class="sub"></div>
          <div class="btns">
            <div class="btn ph"></div>
            <div class="btn ph ghost"></div>
          </div>
        </div>
        <div class="cards">
          <div class="card"></div><div class="card"></div><div class="card"></div>
        </div>
      </figure>
    </div>
  </div>
</section>

<style>
.hero{position:relative;overflow:hidden}
.bg{position:absolute;inset:0}
.grid{width:100%;height:100%;color:#0a0a0a}
:root[data-theme="dark"] .grid{color:#ffffff}
.glow{
  position:absolute;left:-18%;right:-18%;bottom:-12%;
  height:42%;
  background:radial-gradient(60% 80% at 50% 0%,
    color-mix(in oklab, var(--accent) 22%, transparent) 0%,
    transparent 70%);
  filter:blur(48px);opacity:.40;pointer-events:none;
}

/* Layout */
.wrap{
  display:grid;grid-template-columns:1.05fr .95fr;gap:40px;align-items:center;
  min-height:64vh;padding:54px 0 10px;
}
@media (max-width: 980px){
  .wrap{grid-template-columns:1fr;gap:22px;min-height:auto;padding:30px 0 10px}
}

/* Copy */
.left h1{font-size:clamp(36px,5.6vw,58px);line-height:1.06;margin:0 0 10px}
.left .lede{font-size:clamp(18px,2.2vw,21px);color:var(--muted);margin:0 0 18px}
.cta{display:flex;gap:14px;align-items:center;flex-wrap:wrap;margin:6px 0 4px}
.link{font-weight:600;color:var(--ink)}
.link:hover{text-decoration:underline}
.testimonial{
  display:flex;gap:10px;align-items:flex-start;margin-top:12px;
  background:var(--panel);border:1px solid var(--border);border-radius:14px;padding:10px 12px;max-width:560px
}
.stars{letter-spacing:2px;color:#f5b301;font-size:14px;margin-top:2px}
.testimonial p{margin:0;font-size:14px;color:var(--ink)}
.who{color:var(--muted)}
.benefits{display:flex;gap:10px;flex-wrap:wrap;margin:14px 0 0;padding:0;list-style:none}
.benefits li{
  font-size:13px;color:var(--ink);background:var(--panel);
  border:1px solid var(--border);border-radius:999px;padding:7px 10px
}

/* Mockup */
.right{display:flex;flex-direction:column;align-items:center}
.mock{
  width:min(520px,100%);border:1px solid var(--border);border-radius:16px;
  background:#fff;box-shadow:0 20px 48px rgba(16,24,40,.14);overflow:hidden
}
:root[data-theme="dark"] .mock{
  background:#0f1521;box-shadow:0 20px 48px rgba(0,0,0,.35)
}
.chrome{
  display:flex;align-items:center;gap:6px;border-bottom:1px solid var(--border);
  padding:10px 12px;background:linear-gradient(180deg,#fafbff,#f1f4f8)
}
:root[data-theme="dark"] .chrome{background:linear-gradient(180deg,#101726,#0d1420)}
.dot{width:8px;height:8px;border-radius:50%;display:inline-block;opacity:.95}
.r{background:#ef6b6b}.y{background:#f5c351}.g{background:#63ca7b}
.addr{margin-left:auto;font-size:12px;color:var(--muted);background:var(--bg);
  border:1px solid var(--border);padding:6px 10px;border-radius:10px}
.hero-block{padding:20px 18px 12px}
.ttl{width:66%;height:24px;border-radius:8px;background:color-mix(in oklab, var(--ink) 14%, transparent)}
.sub{margin-top:10px;width:52%;height:12px;border-radius:8px;background:color-mix(in oklab, var(--ink) 10%, transparent)}
.btns{display:flex;gap:10px;margin-top:16px}
.btn.ph{width:120px;height:36px;border-radius:10px;background:var(--accent)}
.btn.ph.ghost{background:transparent;border:1px solid var(--border)}
.cards{display:grid;grid-template-columns:repeat(3,1fr);gap:12px;padding:16px 16px 22px}
.card{height:90px;border-radius:12px;border:1px solid var(--border);background:var(--panel)}
</style>

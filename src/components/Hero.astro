---
/* serif za naslov – bez eksternog hosta, fallback */
const serifStack = `"Iowan Old Style", "Book Antiqua", "Palatino Linotype", Palatino, "URW Palladio L", serif`;
---
<section class="hero">
  <div class="container wrap">
    <div class="left">
      <h1 style={`font-family:${serifStack}`}>Elevate your online presence in <span class="hl">72h</span></h1>
      <p class="lede">Landing + <strong>mail</strong>, <strong>calendar</strong> or <strong>Zoom</strong>. Fast, clean, zero headache.</p>

      <div class="cta">
        <a href="#contact" class="btn gold">Get in touch</a>
        <a href="#pricing" class="btn ghost">See pricing →</a>
      </div>

      <ul class="badges" role="list">
        <li>⚡ Lighthouse 100/100</li>
        <li>🛡️ Cloudflare hosting</li>
        <li>🔧 Zero maintenance</li>
      </ul>
    </div>

    <!-- Desno: apstraktna “liquid glass” ilustracija (monochrome, suptilni glow) -->
    <div class="right panel">
      <svg viewBox="0 0 520 360" class="art" aria-hidden="true">
        <defs>
          <linearGradient id="g1" x1="0" y1="0" x2="1" y2="1">
            <stop offset="0%"  stop-color="rgba(255,255,255,.9)"/>
            <stop offset="100%" stop-color="rgba(255,255,255,.6)"/>
          </linearGradient>
          <filter id="glow" x="-40%" y="-40%" width="180%" height="180%">
            <feGaussianBlur stdDeviation="18" result="b"/>
            <feMerge><feMergeNode in="b"/><feMergeNode in="SourceGraphic"/></feMerge>
          </filter>
        </defs>

        <!-- staklene pločice -->
        <rect x="40"  y="40"  rx="18" width="110" height="110" fill="url(#g1)" opacity=".10" stroke="rgba(255,255,255,.22)"/>
        <rect x="190" y="30"  rx="18" width="120" height="120" fill="url(#g1)" opacity=".12" stroke="rgba(255,255,255,.22)"/>
        <rect x="340" y="60"  rx="18" width="120" height="120" fill="url(#g1)" opacity=".10" stroke="rgba(255,255,255,.22)"/>
        <rect x="90"  y="190" rx="18" width="130" height="130" fill="url(#g1)" opacity=".12" stroke="rgba(255,255,255,.22)"/>
        <rect x="260" y="200" rx="18" width="160" height="120" fill="url(#g1)" opacity=".10" stroke="rgba(255,255,255,.22)"/>

        <!-- diskretan gold naglasak -->
        <circle cx="430" cy="300" r="70" fill="none" stroke="url(#g1)" stroke-width="2" filter="url(#glow)" opacity=".25"/>
      </svg>

      <div class="icons">
        <span title="Email" class="icon i1">✉️</span>
        <span title="Calendar" class="icon i2">📅</span>
        <span title="Zoom" class="icon i3">🎥</span>
        <span title="Files" class="icon i4">📄</span>
      </div>
    </div>
  </div>
</section>

<style>
.hero{position:relative;padding:74px 0 38px;background:
  radial-gradient(60% 80% at 20% 0%, rgba(202,168,106,.10) 0%, transparent 60%),
  linear-gradient(180deg, rgba(255,255,255,.02), rgba(255,255,255,0) 40%)}

.wrap{display:grid;grid-template-columns:1.1fr .9fr;gap:28px;align-items:center}
@media (max-width:980px){.wrap{grid-template-columns:1fr}}

.left .hl{color:var(--accent)}
.cta{display:flex;gap:12px;margin:12px 0 10px;flex-wrap:wrap}
.badges{display:flex;gap:10px;flex-wrap:wrap;margin:12px 0 0;padding:0;list-style:none;color:var(--muted)}

.right{padding:18px;border-radius:var(--radius);position:relative;overflow:hidden}
.art{width:100%;height:auto;display:block;mix-blend:screen}
.icons{position:absolute;inset:0;pointer-events:none}
.icon{
  position:absolute;display:grid;place-items:center;width:62px;height:62px;border-radius:16px;
  background:linear-gradient(180deg, rgba(255,255,255,.18), rgba(255,255,255,.08));
  border:1px solid rgba(255,255,255,.24);backdrop-filter:blur(8px);box-shadow:var(--shadow-md);font-size:26px
}
.i1{left:24px;top:22px}
.i2{right:24px;top:38px}
.i3{left:36px;bottom:28px}
.i4{right:36px;bottom:22px}
</style>

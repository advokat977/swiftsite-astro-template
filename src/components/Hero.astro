---
import { SITE, LINKS, FEATURES } from "../../swiftsite.config";
---
<section class="hero">
  <h1><span class="serif">It works</span> ðŸŽ‰</h1>
  <p class="lede">{SITE.tagline}</p>
  <div class="actions">
    {FEATURES.contact && <a class="btn primary" href="#contact">Contact</a>}
    {FEATURES.calendar && <a class="btn ghost" href={LINKS.calendar}>Calendar</a>}
    {FEATURES.zoom && <a class="btn ghost" href={LINKS.zoom}>Zoom</a>}
  </div>
</section>

<style>
.hero{padding:24px 0}
.hero h1{font-size:44px;line-height:1.1;margin:0 0 10px}
.hero .lede{color:var(--muted);font-size:18px;margin:0 0 18px;max-width:720px}
.actions{display:flex;gap:12px;flex-wrap:wrap}
.btn{display:inline-block;padding:10px 14px;border-radius:10px;text-decoration:none}
.btn.primary{background:var(--accent);color:white;border:1px solid #00000033}
.btn.ghost{border:1px solid #ffffff2a;color:var(--ink)}
@media (max-width: 980px){ .hero h1{font-size:34px} }
</style>

import { FEATURES } from "../../swiftsite.config";
---
<section class="section hero">
  <div class="container wrap">
    <!-- Copy -->
    <div class="left">
      <h1>Launch your site in <span class="nowrap">72h</span> ‚Äî effortlessly</h1>
      <p class="lede">Landing + <strong>mail</strong>, <strong>calendar</strong> or <strong>Zoom</strong>. Fast, clean, zero headache.</p>

      <div class="cta">
        {FEATURES.contact && <a class="btn primary" href="#contact">Get in touch</a>}
        <a class="btn" href="/thanks" aria-label="See example">See example ‚Üí</a>
      </div>

      <div class="pill-group">
        <span class="pill">‚ö° Lighthouse 100/100</span>
        <span class="pill">üõ°Ô∏è Cloudflare hosting</span>
        <span class="pill">üîß Zero maintenance</span>
      </div>
    </div>

    <!-- Liquid-glass icons: isti identitet, soft, ne odvlaƒçe pa≈ænju -->
    <div class="right">
      <div class="glass-grid">
        <div class="glass mail" title="Email" aria-hidden="true">
          <svg viewBox="0 0 24 24"><path d="M3 6h18v12H3z" fill="none" stroke="currentColor" stroke-width="2"/><path d="M3 7l9 7 9-7" fill="none" stroke="currentColor" stroke-width="2"/></svg>
        </div>
        <div class="glass cal" title="Calendar" aria-hidden="true">
          <svg viewBox="0 0 24 24"><rect x="3" y="5" width="18" height="16" rx="2" fill="none" stroke="currentColor" stroke-width="2"/><path d="M3 9h18M8 3v4M16 3v4" fill="none" stroke="currentColor" stroke-width="2"/></svg>
        </div>
        <div class="glass vid" title="Video" aria-hidden="true">
          <svg viewBox="0 0 24 24"><rect x="3" y="7" width="14" height="10" rx="2" fill="none" stroke="currentColor" stroke-width="2"/><path d="M17 9l4-2v10l-4-2z" fill="none" stroke="currentColor" stroke-width="2"/></svg>
        </div>
        <div class="glass files" title="Files" aria-hidden="true">
          <svg viewBox="0 0 24 24"><path d="M14 3H6a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z" fill="none" stroke="currentColor" stroke-width="2"/><path d="M14 3v6h6" fill="none" stroke="currentColor" stroke-width="2"/></svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.wrap{
  display:grid; grid-template-columns: 1.05fr .95fr; gap: 32px; align-items: center;
}
@media (max-width: 980px){ .wrap{ grid-template-columns: 1fr; } }

.cta{ display:flex; gap: 12px; flex-wrap: wrap; margin-top: var(--s-2); }
.pill-group{ display:flex; gap:10px; flex-wrap:wrap; margin-top: var(--s-2); }

.right{ display:flex; justify-content:center; }
.glass-grid{
  display:grid; grid-template-columns: repeat(2, 120px); gap: 16px; justify-items:center;
}

/* Liquid glass card */
.glass{
  width: 110px; height: 110px; border-radius: 22px; position: relative;
  display:grid; place-items:center; color: rgba(0,0,0,.75);
  background:
    linear-gradient(180deg, rgba(255,255,255,.85), rgba(255,255,255,.60));
  border: 1px solid rgba(255,255,255,.65);
  box-shadow:
    0 18px 36px rgba(16,24,40,.12),
    inset 0 0 0 1px rgba(0,0,0,.04);
  backdrop-filter: blur(10px) saturate(1.3);
  transition: transform .08s ease, box-shadow .16s ease;
}
.glass::after{
  content:""; position:absolute; inset:0; border-radius: 22px;
  background: radial-gradient(120% 120% at 20% 0%,
    rgba(255,255,255,.55), rgba(255,255,255,0) 60%);
  pointer-events:none;
}
.glass svg{ width: 44px; height: 44px; }

/* Suptilne boje po tipu (edge-glow) */
.mail { box-shadow: 0 18px 36px rgba(14,165,233,.16), inset 0 0 0 1px rgba(14,165,233,.20); }
.cal  { box-shadow: 0 18px 36px rgba(34,197,94,.16),  inset 0 0 0 1px rgba(34,197,94,.20); }
.vid  { box-shadow: 0 18px 36px rgba(168,85,247,.16), inset 0 0 0 1px rgba(168,85,247,.20); }
.files{ box-shadow: 0 18px 36px rgba(245,158,11,.16),  inset 0 0 0 1px rgba(245,158,11,.20); }

.glass:hover{ transform: translateY(-2px); box-shadow: 0 26px 44px rgba(16,24,40,.16), inset 0 0 0 1px rgba(0,0,0,.06); }
</style>

---
const plans = [
  {
    key: "basic",
    name: "Basic",
    price: "€99 setup",
    features: [
      "Landing page",
      "Contact form (email)",
      "SEO basics",
      "Fast hosting",
    ],
    cta: "Choose Basic",
    popular: false,
  },
  {
    key: "plus",
    name: "Plus",
    price: "€149 setup",
    features: [
      "Everything in Basic",
      "Calendar integration OR Zoom",
      "Priority support",
    ],
    cta: "Choose Plus",
    popular: true,
  },
  {
    key: "pro",
    name: "Pro",
    price: "€199 setup",
    features: [
      "Everything in Basic",
      "Calendar AND Zoom",
      "Priority support",
    ],
    cta: "Choose Pro",
    popular: false,
  },
];
---
<section id="pricing" class="section light">
  <div class="container">
    <header style="margin-bottom:14px">
      <h2>Packages</h2>
      <p class="muted">Pick what you need. Upgrade anytime.</p>
    </header>

    <div class="cards grid-3">
      {plans.map(p => (
        <article class={`card ${p.popular ? "pop" : ""}`}>
          {p.popular && <div class="most">Most popular</div>}
          <h3 class="title">{p.name}</h3>
          <div class="price">{p.price}</div>

          <ul class="list" role="list">
            {p.features.map(f => (
              <li>✔ {f}</li>
            ))}
          </ul>

          <a href="#contact" class={`btn ${p.popular ? "gold" : "ghost"}`}>{p.cta}</a>
        </article>
      ))}
    </div>

    <p class="foot muted" style="margin-top:12px">
      <strong>Plus</strong> includes <em>Calendar OR Zoom</em> (one add-on). <strong>Pro</strong> includes both: <em>Calendar AND Zoom</em>. No hidden fees. Upgrade anytime.
    </p>
  </div>
</section>

<style>
.cards .card{
  background:#fff;border:1px solid #e7e9ee;border-radius:18px;
  padding:22px 20px 20px;box-shadow:0 18px 40px rgba(16,24,40,.08);display:flex;flex-direction:column;gap:12px
}
.cards .card .title{font-size:20px;margin:0;color:#111827}
.cards .card .price{font-weight:800;color:#111827}
.cards .card .list{margin:2px 0 8px;padding:0 0 0 2px;list-style:none;color:#1f2937}
.cards .card .list li{margin:6px 0}

.card.pop{position:relative;background:linear-gradient(180deg,#0f1521,#0b1019);color:#e7ebf5;border-color:#1f2836;box-shadow:var(--shadow-lg)}
.card.pop .title,.card.pop .price{color:#fff}
.card.pop .list{color:#cfd6e4}
.most{
  position:absolute;top:-12px;left:20px;transform:translateY(-50%);
  background:rgba(202,168,106,.18);color:#7a602f;border:1px solid rgba(202,168,106,.35);
  font-size:12px;font-weight:800;padding:6px 10px;border-radius:999px
}

.cards .btn{margin-top:auto}
.foot em{font-style:italic}
</style>

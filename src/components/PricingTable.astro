---
const cards = [
  {
    id: "basic",
    name: "Basic",
    blurb: "Ideal for a quick and effective online debut.",
    popular: false,
    features: [
      "Custom Landing Page",
      "Professional Contact Form",
      "SEO Optimisation Basics",
      "Premium Hosting",
    ],
    cta: "Choose Plan",
  },
  {
    id: "plus",
    name: "Plus",
    blurb: "Most popular. Built for dynamic client engagement.",
    popular: true,
    features: [
      "Everything in Basic",
      "Calendar or Zoom Integration",
      "Enhanced Analytics",
      "Premium Hosting",
    ],
    cta: "Choose Plan",
  },
  {
    id: "pro",
    name: "Pro",
    blurb: "Full-spectrum solution for growing teams.",
    popular: false,
    features: [
      "Everything in Plus",
      "Full Multi-Page Website",
      "Custom Functionality (on request)",
      "Premium Hosting",
    ],
    cta: "Choose Plan",
  },
];
---
<section id="pricing" class="section pricing" aria-labelledby="pricing-title">
  <div class="container">
    <header class="head">
      <h2 id="pricing-title" class="h2">Tailored Solutions. Unrivalled Speed.</h2>
      <p class="lede">Every package is designed to deliver a fast, effective online presence. Premium hosting included.</p>
    </header>

    <div class="cards">
      {cards.map(c => (
        <article class={`card pcard ${c.popular ? "is-popular" : ""}`}>
          {c.popular && <div class="flag" aria-hidden="true">Most popular</div>}
          <h3 class="title">{c.name}</h3>
          <p class="blurb">{c.blurb}</p>
          <ul class="list">
            {c.features.map(f => (
              <li>
                <svg width="20" height="20" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M9 16.17 4.83 12l-1.42 1.41L9 19l12-12-1.41-1.41z"/></svg>
                <span>{f}</span>
              </li>
            ))}
          </ul>
          <a href="#contact" class="btn primary">{c.cta}</a>
        </article>
      ))}
    </div>

    <p class="foot">Plus includes <em>Calendar OR Zoom</em>. Pro includes both.</p>
  </div>
</section>

<style>
.pricing{background:var(--bg)}
.head{text-align:center;margin-bottom:28px}
.cards{
  display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:24px
}
@media (max-width:980px){ .cards{grid-template-columns:1fr} }

.pcard{
  padding:28px;border-radius:16px;transition:transform .25s ease, box-shadow .25s ease;
  text-align:left
}
.pcard:hover{transform:translateY(-6px);box-shadow:0 18px 40px rgba(16,24,40,.12)}
.pcard .title{
  font-family:"Playfair Display",serif;font-weight:900;font-size:clamp(20px,2.2vw,24px);margin:0 0 6px
}
.pcard .blurb{margin:0 0 18px;color:var(--muted)}
.pcard .list{list-style:none;margin:0 0 22px;padding:0}
.pcard .list li{display:flex;gap:10px;align-items:center;margin:10px 0;color:#2a2f36}
.pcard .list svg{color:var(--champagne)}

.is-popular{
  background:var(--dark);color:#E9ECF2;border-color:transparent;transform:scale(1.02)
}
.is-popular .title{color:var(--champagne)}
.is-popular .blurb{color:#DADFE7}
.is-popular .list li{color:#F3F6FB}
.flag{
  position:absolute;top:14px;right:14px;background:#f0e6d4;color:#8b612c;font-weight:900;
  padding:6px 10px;border-radius:999px;font-size:12px
}
.foot{text-align:center;color:var(--muted);margin:16px 0 0}
</style>

<section id="contact" class="section light">
  <div class="container">
    <header style="margin-bottom:12px">
      <h2>Contact us</h2>
      <p class="muted">Tell us about your site and which plan you want.</p>
    </header>

    <form class="panel form" method="post" action="/api/contact">
      <div class="row">
        <label class="field">
          <span>Name</span>
          <input type="text" name="name" placeholder="Your name" required>
        </label>
        <label class="field">
          <span>Email</span>
          <input type="email" name="email" placeholder="you@email.com" required>
        </label>
      </div>

      <label class="field">
        <span>Message</span>
        <textarea name="message" rows="7" placeholder="What do you need?" required></textarea>
      </label>

      <div class="actions">
        <button class="btn gold" type="submit">Send message</button>
      </div>
    </form>
  </div>
</section>

<style>
.form{padding:18px}
.row{display:grid;grid-template-columns:1fr 1fr;gap:14px;margin-bottom:12px}
@media (max-width:900px){.row{grid-template-columns:1fr}}
.field{display:flex;flex-direction:column;gap:6px}
.field span{font-weight:700;color:#e6e9ef}
.light .field span{color:#1b1f27}
input,textarea{
  width:100%;border:1px solid #e4e7ee;border-radius:12px;padding:12px 14px;font:inherit;color:#111827;background:#fff;
}
textarea{resize:vertical}
.actions{display:flex;justify-content:flex-start;margin-top:10px}
</style>
